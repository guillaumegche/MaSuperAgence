{% extends 'base.html.twig' %}

{% block title %}MaSuperAgence - Gestion des options{% endblock %}

{% block body %}
<div class="container mt-4">
    <!-- Affichage des messages flash success et error -->
    <div class="row justify-content-center text-center my-3">
        <div class="col-md-12">
            {% for message in app.flashes('success')%}
            <div class="alert alert-success" id="message">
                {{ message }}
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            {% endfor %}

            {% for message in app.flashes('error')%}
            <div class="alert alert-danger" id="message">
                {{ message }}
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            {% endfor %}
        </div>
    </div>
    <div class="d-flex justify-content-between align-items-center">
        <h1>Gestion des options</h1>
        <a href="{{ path('option_new') }}" class="btn btn-primary">Ajouter</a>
    </div>
    
    <table class="table">
        <thead>
            <tr>
                <th>Num√©ro</th>
                <th>Nom</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for option in options %}
            <tr>
                <td>{{ option.id }}</td>
                <td>{{ option.name }}</td>
                <td>
                    <a href="{{ path('option_edit', {'id': option.id}) }}" class="btn btn-primary">Editer</a>
                    {% include('admin/option/_delete_form.html.twig') %}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    
{% endblock %}
